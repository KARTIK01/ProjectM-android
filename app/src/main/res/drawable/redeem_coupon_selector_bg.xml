<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2E7D32"
                />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#2E7D32"
                android:endColor="#4CAF50"
                android:angle="90"/>
            <corners
                android:radius="2dp" />
        </shape>
    </item>
</selector>
