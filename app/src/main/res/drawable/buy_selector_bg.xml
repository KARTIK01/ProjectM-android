<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimary0"
                />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:type="linear"
                android:startColor="@color/colorPrimary0"
                android:endColor="@color/colorPrimary5"
                android:angle="90"/>
            <corners
                android:radius="2dp" />
        </shape>
    </item>
</selector>
