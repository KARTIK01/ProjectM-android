<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/card_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mickledeals.views.AspectRatioImageView
            android:id="@+id/card_image"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            card_view:ratio="0.75"/>


        <com.mickledeals.views.AutofitTextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_image"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="15sp"
            card_view:minTextSize="15sp"
            android:textStyle="bold" />


        <com.mickledeals.views.AutofitTextView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_image"
            android:layout_below="@id/card_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:textColor="@color/lightGrayTextColor"
            android:textSize="15sp"
            card_view:minTextSize="14sp" />



        <TextView
            android:id="@+id/card_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp" />

        <TextView
            android:id="@+id/card_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_below="@id/card_title"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:text="@string/redeem"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/button_selector_bg"/>

        <TextView
            android:id="@+id/card_expired_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card_image"
            android:layout_toLeftOf="@id/card_button"
            android:layout_alignParentBottom="true"
            android:textColor="@color/defaultTextColor"
            android:textSize="13sp"
            android:paddingRight="2dp"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>